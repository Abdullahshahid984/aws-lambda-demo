pipeline {
  agent any

  environment {
    SONAR_SCANNER_HOME = tool name: 'SonarScanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
  }

  stages {
    stage('SonarQube Scan') {
      steps {
        withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'TOKEN')]) {
         sh 'sonar-scanner -Dsonar.projectKey=lambda-function -Dsonar.sources=. -Dsonar.login=$TOKEN'
         }
        }
      }
    }
  }

  // Optional: Add post steps if you want quality gate integration
}

